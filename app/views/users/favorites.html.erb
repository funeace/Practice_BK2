<h2>いいね一覧</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ユーザ</th>
      <th>タイトル</th>
      <th>BODY</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill , 60,60, format: 'jpeg' %></td>
        <td><%= book.title%></td>
        <td><%= book.body%></td>
      </tr>
    <% end %>
  </tbody>
</table>
