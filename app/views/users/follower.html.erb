<h2>フォロワー一覧</h2>


<% if !@users.empty? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>
          <td>image</td>
          <td>name</td>
          <td>introduction</td>
          <td></td>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 80,80, format: 'jpeg', fallback: "no_image.jpg" %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
          <td><%= link_to "Show", user_path(user) %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>